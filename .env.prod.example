# Production environment
# Copy to .env and fill in values

# Database
POSTGRES_DB=pivnikonto
POSTGRES_USER=pivnikonto
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# Symfony
APP_ENV=prod
APP_DEBUG=0
APP_SECRET=CHANGE_ME_GENERATE_WITH_openssl_rand_hex_32
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}?serverVersion=16

# JWT (generate keys with: php bin/console lexik:jwt:generate-keypair)
JWT_SECRET_KEY=%kernel.project_dir%/config/jwt/private.pem
JWT_PUBLIC_KEY=%kernel.project_dir%/config/jwt/public.pem
JWT_PASSPHRASE=CHANGE_ME

# CORS
CORS_ALLOW_ORIGIN='^https?://(localhost|127\.0\.0\.1|YOUR_DOMAIN)(:[0-9]+)?$'

# Redis
REDIS_URL=redis://redis:6379
